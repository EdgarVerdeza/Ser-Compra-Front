
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <title>Ser Compra</title>
    <meta name="author" content="Grup Serco">
    <meta name="description" content="sistema de informacion para provedores y compras">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
        <meta name="keywords" content="Ser compras">
        <link rel="stylesheet" href="~/Content/Style/Styledisenohome.css" />
        <link rel="shortcut icon" href="~/Content/Imagenes/iconlogo3.png">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <!--menu-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-pink">
        <a href="#v-pills-home" class="navbar-brand">
            <img src="~/Content/Imagenes/logo1.png" style="width:50%;" />
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" style="text-align: left; margin-left:65%;" id="main-menu">

            <div>
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            <i class="far fa-envelope"></i> Contáctanos
                        </button>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.comfacundi.com.co/"><i class="fas fa-power-off"></i> Salir</a>
                    </li>

                </ul>
            </div>

        </div>

    </nav>
    <!-- modal de contactos -->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm">

                                <div class="flex-direc">
                                    <div class="icon-ubica">
                                        <i class="fas fa-phone-alt"></i>
                                    </div>
                                    <h3 class="titulo-form">Telefono</h3>
                                    <p>(+57) 323 900 00 00</p>
                                </div>
                                <div class="flex-direc">
                                    <div class="icon-ubica">
                                        <i class="fas fa-envelope-open-text"></i>
                                    </div>
                                    <h3 class="titulo-form">Correo</h3>
                                    <p>sercompra@gmail.com</p>
                                </div>
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d63627.65940912732!2d-74.09267068504955!3d4.642406700000024!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f9a39b65e4b45%3A0xb245795852177049!2sServicio%20Nacional%20de%20Aprendizaje%20SENA!5e0!3m2!1ses-419!2sco!4v1600893550998!5m2!1ses-419!2sco"
                                        width="250" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
                                        tabindex="0"></iframe>
                            </div>
                            <div class="col-sm-7 mt-5">
                                <form>
                                    <div class="form-row">
                                        <div class="col-6">
                                            <label for="inputAddress">Nombre </label>
                                            <input type="text" class="form-control" placeholder="nombre">
                                        </div>
                                        <div class="col-6">
                                            <label for="inputAddress">Apellido </label>
                                            <input type="text" class="form-control" placeholder="apellido">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-6">
                                            <label for="inputAddress">Correo </label>
                                            <input type="text" class="form-control" placeholder="Correo">
                                        </div>
   
                                            <div class="form-group">
                                                <label for="exampleFormControlFile1"></label>
                                                <input type="file" class="form-control-file" id="exampleFormControlFile1">
                                            </div>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleFormControlTextarea1">Dejanos Aquí tu Opinion </label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!--menuvertical-->

    <div class="row" style="margin:2% 0 10% 0;">
        <div class="col-3">
            <ul class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <li class="nav-link"><i class="fas fa-users"></i> @Html.ActionLink("Ingreso proveedor", "Index", "Home")</li>
                <li class="nav-link"><i class="fas fa-user"></i> @Html.ActionLink("Ingreso funcionario", "Logincomfacundi", "Home")</li>
                <li class="nav-link"><i class="fas fa-file-contract"></i> @Html.ActionLink("Formulario de inscripcion", "Formproveedor", "Home")</li>
            </ul>
        </div>

        <!--
                <div class="row">
                    <div class="col-3">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-loginpro-tab" data-toggle="pill" href="#v-pills-loginpro" role="tab" aria-controls="v-pills-loginpro" aria-selected="true">Ingreso de proveedor</a>
                            <a class="nav-link" id="v-pills-inspro-tab" data-toggle="pill" href="#v-pills-inspro" role="tab" aria-controls="v-pills-inspro" aria-selected="false">Formulario de Inscripcion de proveedor</a>
                            <a class="nav-link" id="v-pills-logincom-tab" data-toggle="pill" href="#v-pills-logincom" role="tab" aria-controls="v-pills-logincom" aria-selected="false">Ingreso de comfacundi</a>
                        </div>
                    </div>
        -->
        <!--interior contenido-->
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">

                @RenderBody()

            </div>
        </div>
    </div>
    <!--footer-->

    <div class="card text-center">

        <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-outline-primary"><i class="fab fa-facebook-square"></i></a>
            <a href="#" class="btn btn-outline-danger"><i class="fab fa-instagram"></i></a>
        </div>
        <div class="card-footer text-muted" style="background-color: #000B4B;">
            Derechos de autor © 2020 Ser Compra. Group Sercom.
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
</body>
</html>